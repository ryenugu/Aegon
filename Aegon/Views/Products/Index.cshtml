@model IEnumerable<MpiHeader_Test>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HCAUniverse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Index)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HCAUniverse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Index)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Code}) |
                @Html.ActionLink("Details", "Details", new {id = item.Code}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Code})
            </td>
        </tr>
    }

</table>